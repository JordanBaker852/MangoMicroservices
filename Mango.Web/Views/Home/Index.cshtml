@using Mango.Web.Models.DTO

@model List<ProductDTO>

@{
    ViewData["Title"] = "Home Page";
}

@if (Model.Count > 0)
{
    <h1 class="display-4 text-center">All our products</h1>
    <div class="container row">
        @foreach (var product in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="p-0 my-3 border rounded">
                    <div class="card">
                        <h3 class="card-title text-white-50 text-center py-2">@product.Name</h3>
                        <img src="@product.ImageUrl" class="card-img-top img-fluid">
                        <div class="card-body">
                            <div class="d-flex justify-content-between py-2">
                                <span class="text-danger" style="font-size:20px;">@product.Price.ToString("c")</span>
                                <span class="badge bg-warning text-white p-2">@product.CategoryName</span>
                            </div>
                            <p class="card-text">@Html.Raw(product.Description)</p>
                            @if(User.Identity.IsAuthenticated)
                            {
                                <div class="row">
                                    <div class="col">
                                        <a class="btn btn-success form-control" asp-action="ProductDetails" asp-route-productId="@product.Id">Details</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}